<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_cab_background_bottom_holo_light"
    android:orientation="horizontal"
    android:padding="5dip" >




    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/title"
        android:gravity="right"
        android:text="29/10/2014"
        android:layout_marginRight="5dip"
        android:textSize="12dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/duration"
        android:textColor="#343434"
        android:textSize="16dip"
        android:layout_marginTop="1dip"
        android:text="Message Comes Here." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hidden"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/duration"
        android:layout_toRightOf="@+id/duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"
        android:id="@+id/idx"
        android:textColor="#10bcc9"
        android:visibility="invisible"
        android:layout_above="@+id/artist"
        android:layout_toRightOf="@+id/hidden" />


</RelativeLayout>